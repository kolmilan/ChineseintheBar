<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="at.ac.univie.informatik.chineseinthebar.CategoryActivity"
    tools:showIn="@layout/activity_category">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal">

    <Button
        android:id="@+id/eat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="eatOnClick"
        android:textSize="30sp"
        android:background="@drawable/papyrus5"
        android:text="EAT" />

    <Button
        android:id="@+id/drink"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/papyrus6"
        android:textSize="30sp"
        android:onClick="drinkOnClick"
        android:text="DRINK" />

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/talk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/papyrus6"
            android:textSize="30sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:onClick="talkOnClick"
            android:text="TALK" />

        <Button
            android:id="@+id/dance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/papyrus5"
            android:onClick="danceOnClick"
            android:textSize="30sp"
            android:text="DANCE" />

    </LinearLayout>
</LinearLayout>